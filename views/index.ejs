    <script>
        // Header scroll effect
        window.addEventListener('scroll', function() {
            const header = document.getElementById('header');
            if (window.scrollY > 50) {
                header.classList.add('scrolled');
            } else {
                header.classList.remove('scrolled');
            }
        });

        // Smooth scroll for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // Portfolio horizontal scroll indicators
        const portfolioContainer = document.querySelector('.portfolio-gallery-container');
        const scrollDots = document.querySelectorAll('.scroll-dot');

        if (portfolioContainer && scrollDots.length > 0) {
            // Update active dot based on scroll position
            portfolioContainer.addEventListener('scroll', function() {
                const scrollLeft = this.scrollLeft;
                const itemWidth = this.querySelector('.portfolio-item').offsetWidth + 20; // actual width + gap
                const activeIndex = Math.round(scrollLeft / itemWidth);

                scrollDots.forEach((dot, index) => {
                    dot.classList.toggle('active', index === activeIndex);
                });
            });

            // Click dot to scroll to item
            scrollDots.forEach((dot, index) => {
                dot.addEventListener('click', function() {
                    const itemWidth = portfolioContainer.querySelector('.portfolio-item').offsetWidth + 20; // actual width + gap
                    portfolioContainer.scrollTo({
                        left: index * itemWidth,
                        behavior: 'smooth'
                    });
                });
            });

            // Set first dot as active initially
            if (scrollDots[0]) {
                scrollDots[0].classList.add('active');
            }
        }

        // Entrance Animations on Scroll
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px'
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('animate');
                    observer.unobserve(entry.target);
                }
            });
        }, observerOptions);

        // Observe hero image - trigger immediately if already visible
        const heroImage = document.querySelector('.hero-image img');
        if (heroImage) {
            observer.observe(heroImage);
            // Check if already in viewport on page load
            const rect = heroImage.getBoundingClientRect();
            const isVisible = rect.top < window.innerHeight && rect.bottom > 0;
            if (isVisible) {
                setTimeout(() => heroImage.classList.add('animate'), 100);
            }
        }

        // Observe service icons with stagger
        const serviceIcons = document.querySelectorAll('.service-icon');
        serviceIcons.forEach((icon, index) => {
            icon.style.animationDelay = `${index * 0.15}s`;
            observer.observe(icon);
        });

        // Observe benefit items with stagger
        const benefitItems = document.querySelectorAll('.benefit-item');
        benefitItems.forEach((item, index) => {
            item.style.animationDelay = `${index * 0.1}s`;
            observer.observe(item);
        });

        // Observe process steps with sequential stagger
        const processSteps = document.querySelectorAll('.process-grid > div');
        processSteps.forEach((step, index) => {
            const icon = step.querySelector('.process-icon');
            const title = step.querySelector('h3');
            const description = step.querySelector('p');

            // Base delay for each step
            const baseDelay = index * 0.2;

            if (icon) {
                icon.style.animationDelay = `${baseDelay}s`;
                observer.observe(icon);
            }

            if (title) {
                title.style.animationDelay = `${baseDelay + 0.15}s`;
                observer.observe(title);
            }

            if (description) {
                description.style.animationDelay = `${baseDelay + 0.25}s`;
                observer.observe(description);
            }
        });
    </script>
