<%- include('partials/header', {
    pageTitle: 'Contact | Start Your Project',
    pageDescription: 'Ready to start your web development project? Get in touch for a free consultation and quote.'
}) %>

<div class="container">
    <!-- Hero Section -->
    <section style="text-align: center; padding: 3rem 0;">
        <h1 style="font-size: 3rem; margin-top: 3rem ; margin-bottom: 1rem; color: var(--gray-900);">
            Let's Build Something Amazing Together
        </h1>
        <p style="font-size: 1.25rem; color: var(--gray-600); max-width: 600px; margin: 0 auto;">
            Have a project in mind? I'd love to hear about it. Get in touch and let's discuss how I can help bring your ideas to life.
        </p>
    </section>

    <!-- Contact Content -->
    <div style="display: grid; grid-template-columns: 2fr 1fr; gap: 3rem; margin-bottom: 3rem;">
        <!-- Contact Form -->
        <div style="background: white; padding: 3rem; border-radius: var(--radius-xl); box-shadow: var(--shadow-lg);">
            <h2 style="margin-bottom: 2rem; color: var(--gray-900); display: flex; align-items: center; gap: 0.5rem;">
                <i class="fas fa-envelope" style="color: var(--primary-blue);"></i>
                Send Me a Message
            </h2>
            
            <form id="contactForm" style="display: flex; flex-direction: column; gap: 1.5rem;">
                <!-- Name Field -->
                <div>
                    <label for="name" style="display: block; margin-bottom: 0.5rem; font-weight: 600; color: var(--gray-700);">
                        Your Name *
                    </label>
                    <input 
                        type="text" 
                        id="name" 
                        name="name" 
                        required
                        style="width: 100%; padding: 1rem; border: 2px solid var(--gray-300); border-radius: 0.5rem; font-size: 1rem; transition: border-color 0.3s;"
                        placeholder="John Doe"
                    >
                </div>

                <!-- Email Field -->
                <div>
                    <label for="email" style="display: block; margin-bottom: 0.5rem; font-weight: 600; color: var(--gray-700);">
                        Email Address *
                    </label>
                    <input 
                        type="email" 
                        id="email" 
                        name="email" 
                        required
                        style="width: 100%; padding: 1rem; border: 2px solid var(--gray-300); border-radius: 0.5rem; font-size: 1rem; transition: border-color 0.3s;"
                        placeholder="john@example.com"
                    >
                </div>

                <!-- Project Type -->
                <div>
                    <label for="projectType" style="display: block; margin-bottom: 0.5rem; font-weight: 600; color: var(--gray-700);">
                        Project Type *
                    </label>
                    <select 
                        id="projectType" 
                        name="projectType" 
                        required
                        style="width: 100%; padding: 1rem; border: 2px solid var(--gray-300); border-radius: 0.5rem; font-size: 1rem; transition: border-color 0.3s; background: white;"
                    >
                        <option value="">Select a project type...</option>
                        <option value="website">Custom Website</option>
                        <option value="ecommerce">E-commerce Store</option>
                        <option value="webapp">Web Application</option>
                        <option value="other">Other</option>
                    </select>
                </div>

                <!-- Budget Range -->
                <div>
                    <label for="budget" style="display: block; margin-bottom: 0.5rem; font-weight: 600; color: var(--gray-700);">
                        Budget Range
                    </label>
                    <select 
                        id="budget" 
                        name="budget"
                        style="width: 100%; padding: 1rem; border: 2px solid var(--gray-300); border-radius: 0.5rem; font-size: 1rem; transition: border-color 0.3s; background: white;"
                    >
                        <option value="">Select budget range...</option>
                        <option value="500-1000">$500 - $1,000</option>
                        <option value="1000-2500">$1,000 - $2,500</option>
                        <option value="2500-5000">$2,500 - $5,000</option>
                        <option value="5000+">$5,000+</option>
                    </select>
                </div>

                <!-- Message -->
                <div>
                    <label for="message" style="display: block; margin-bottom: 0.5rem; font-weight: 600; color: var(--gray-700);">
                        Project Details *
                    </label>
                    <textarea 
                        id="message" 
                        name="message" 
                        required
                        rows="6"
                        style="width: 100%; padding: 1rem; border: 2px solid var(--gray-300); border-radius: 0.5rem; font-size: 1rem; transition: border-color 0.3s; resize: vertical;"
                        placeholder="Tell me about your project. What are you looking to build? What are your goals?"
                    ></textarea>
                </div>

                <!-- Submit Button -->
                <button 
                    type="submit" 
                    style="background: linear-gradient(135deg, var(--primary-blue), var(--primary-blue-dark)); color: white; padding: 1rem 2rem; border: none; border-radius: 0.5rem; font-size: 1.125rem; font-weight: 600; cursor: pointer; transition: all 0.3s; display: flex; align-items: center; justify-content: center; gap: 0.5rem;"
                >
                    <i class="fas fa-paper-plane"></i>
                    Send Message
                </button>
            </form>

            <!-- Success Message (hidden by default) -->
            <div id="successMessage" style="display: none; background: var(--success-green); color: white; padding: 1rem; border-radius: 0.5rem; margin-top: 1rem; text-align: center;">
                <i class="fas fa-check-circle"></i> Thank you! I'll get back to you within 24 hours.
            </div>
        </div>

        <!-- Contact Information -->
        <div>
            <!-- Quick Contact -->
            <div style="background: white; padding: 2rem; border-radius: var(--radius-xl); box-shadow: var(--shadow-md); margin-bottom: 2rem;">
                <h3 style="margin-bottom: 1.5rem; color: var(--gray-900); display: flex; align-items: center; gap: 0.5rem;">
                    <i class="fas fa-address-card" style="color: var(--primary-blue);"></i>
                    Quick Contact
                </h3>
                
                <div style="display: flex; flex-direction: column; gap: 1rem;">
                    <a href="mailto:webcraftsolutions2u@gmail.com" style="display: flex; align-items: center; gap: 0.75rem; color: var(--gray-700); text-decoration: none; transition: color 0.3s;">
                        <i class="fas fa-envelope" style="color: var(--primary-blue); width: 20px;"></i>
                        webcraftsolutions2u@gmail.com
                    </a>
                    
                    <a href="https://wa.me/60187806530" target="_blank" style="display: flex; align-items: center; gap: 0.75rem; color: var(--gray-700); text-decoration: none; transition: color 0.3s;">
                        <i class="fab fa-whatsapp" style="color: var(--success-green); width: 20px;"></i>
                        WhatsApp Available
                    </a>
                    
                    <div style="display: flex; align-items: center; gap: 0.75rem; color: var(--gray-700);">
                        <i class="fas fa-map-marker-alt" style="color: var(--danger-red); width: 20px;"></i>
                        Malaysia (GMT+8)
                    </div>
                </div>
            </div>

            <!-- Response Time -->
            <div style="background: var(--gray-50); padding: 2rem; border-radius: var(--radius-xl); border: 2px solid var(--gray-200); margin-bottom: 2rem;">
                <h3 style="margin-bottom: 1rem; color: var(--gray-900); display: flex; align-items: center; gap: 0.5rem;">
                    <i class="fas fa-clock" style="color: var(--success-green);"></i>
                    Response Time
                </h3>
                <p style="color: var(--gray-600); line-height: 1.6;">
                    I typically respond within <strong>24 hours</strong>. Due to timezone differences, 
                    I might reply while you're sleeping, ensuring faster project progress!
                </p>
            </div>

            <!-- Office Hours -->
            <div style="background: white; padding: 2rem; border-radius: var(--radius-xl); box-shadow: var(--shadow-md);">
                <h3 style="margin-bottom: 1rem; color: var(--gray-900); display: flex; align-items: center; gap: 0.5rem;">
                    <i class="fas fa-business-time" style="color: var(--warning-amber);"></i>
                    Office Hours
                </h3>
                <p style="color: var(--gray-600); margin-bottom: 1rem;">
                    <strong>Monday - Friday:</strong> 9:00 AM - 6:00 PM (GMT+8)
                </p>
                <p style="color: var(--gray-600); margin-bottom: 1rem;">
                    <strong>Saturday:</strong> 10:00 AM - 2:00 PM (GMT+8)
                </p>
                <p style="color: var(--gray-600);">
                    <strong>Sunday:</strong> Closed
                </p>
                
                <div style="margin-top: 1.5rem; padding-top: 1.5rem; border-top: 1px solid var(--gray-200);">
                    <p style="color: var(--primary-blue); font-size: 0.875rem;">
                        <i class="fas fa-info-circle"></i> 
                        Flexible hours for international clients
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- FAQ Section -->
    <section style="background: var(--gray-50); padding: 3rem; border-radius: var(--radius-xl); margin-bottom: 3rem;">
        <h2 style="text-align: center; margin-bottom: 2rem; color: var(--gray-900);">
            Frequently Asked Questions
        </h2>
        
        <div style="max-width: 800px; margin: 0 auto; display: flex; flex-direction: column; gap: 1.5rem;">
            <div style="background: white; padding: 1.5rem; border-radius: var(--radius-lg); box-shadow: var(--shadow-sm);">
                <h4 style="color: var(--gray-800); margin-bottom: 0.5rem;">How long does a typical project take?</h4>
                <p style="color: var(--gray-600); margin: 0;">
                    Simple websites: 1-2 weeks. E-commerce: 3-4 weeks. Complex applications: 4-6 weeks or more depending on requirements.
                </p>
            </div>
            
            <div style="background: white; padding: 1.5rem; border-radius: var(--radius-lg); box-shadow: var(--shadow-sm);">
                <h4 style="color: var(--gray-800); margin-bottom: 0.5rem;">Do you require full payment upfront?</h4>
                <p style="color: var(--gray-600); margin: 0;">
                    No. I typically work with 50% upfront and 50% upon completion. For larger projects, we can arrange milestone-based payments.
                </p>
            </div>
            
            <div style="background: white; padding: 1.5rem; border-radius: var(--radius-lg); box-shadow: var(--shadow-sm);">
                <h4 style="color: var(--gray-800); margin-bottom: 0.5rem;">Do you provide hosting?</h4>
                <p style="color: var(--gray-600); margin: 0;">
                    I can help you set up hosting and deploy your project, but hosting fees are separate and paid directly to the hosting provider.
                </p>
            </div>
            
            <div style="background: white; padding: 1.5rem; border-radius: var(--radius-lg); box-shadow: var(--shadow-sm);">
                <h4 style="color: var(--gray-800); margin-bottom: 0.5rem;">What if I need changes after the project is complete?</h4>
                <p style="color: var(--gray-600); margin: 0;">
                    You get 30 days of free support for bug fixes. For new features or major changes, I offer competitive hourly rates.
                </p>
            </div>
        </div>
    </section>

    <!-- Social Links -->
    <section style="text-align: center; margin-bottom: 3rem;">
        <h3 style="margin-bottom: 1.5rem; color: var(--gray-900);">Connect on Social Media</h3>
        <div style="display: flex; justify-content: center; gap: 1rem;">
            <a href="https://github.com/yourusername" target="_blank" style="display: flex; align-items: center; justify-content: center; width: 50px; height: 50px; background: var(--gray-800); color: white; border-radius: 50%; text-decoration: none; transition: transform 0.3s;">
                <i class="fab fa-github" style="font-size: 1.5rem;"></i>
            </a>
            <a href="https://linkedin.com/in/yourprofile" target="_blank" style="display: flex; align-items: center; justify-content: center; width: 50px; height: 50px; background: #0077b5; color: white; border-radius: 50%; text-decoration: none; transition: transform 0.3s;">
                <i class="fab fa-linkedin" style="font-size: 1.5rem;"></i>
            </a>
            <a href="https://twitter.com/yourusername" target="_blank" style="display: flex; align-items: center; justify-content: center; width: 50px; height: 50px; background: #1da1f2; color: white; border-radius: 50%; text-decoration: none; transition: transform 0.3s;">
                <i class="fab fa-twitter" style="font-size: 1.5rem;"></i>
            </a>
        </div>
    </section>
</div>

<script>
    // Form validation and submission
    document.getElementById('contactForm').addEventListener('submit', function(e) {
        e.preventDefault();
        
        // Simple form validation
        const name = document.getElementById('name').value.trim();
        const email = document.getElementById('email').value.trim();
        const projectType = document.getElementById('projectType').value;
        const message = document.getElementById('message').value.trim();
        
        if (!name || !email || !projectType || !message) {
            alert('Please fill in all required fields.');
            return;
        }
        
        // In a real application, you would send this to a server
        // For now, just show success message
        document.getElementById('successMessage').style.display = 'block';
        this.reset();
        
        // Hide success message after 5 seconds
        setTimeout(() => {
            document.getElementById('successMessage').style.display = 'none';
        }, 5000);
    });
    
    // Add focus styles to form inputs
    const inputs = document.querySelectorAll('input, select, textarea');
    inputs.forEach(input => {
        input.addEventListener('focus', function() {
            this.style.borderColor = 'var(--primary-blue)';
        });
        
        input.addEventListener('blur', function() {
            this.style.borderColor = 'var(--gray-300)';
        });
    });
    
    // Add hover effect to social links
    const socialLinks = document.querySelectorAll('a[target="_blank"]');
    socialLinks.forEach(link => {
        if (link.style.borderRadius === '50%') {
            link.addEventListener('mouseenter', function() {
                this.style.transform = 'translateY(-3px)';
            });
            
            link.addEventListener('mouseleave', function() {
                this.style.transform = 'translateY(0)';
            });
        }
    });
</script>

